<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clFriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/style_background">

    <ImageView
        android:id="@+id/ivFriendAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_avatar" />

    <TextView
        android:id="@+id/tvFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/hack"
        android:text="Name"
        android:textColor="@color/colorMain"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ivFriendAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFriendLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/hack"
        android:text="lvl"
        android:textColor="@color/colorMain"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivFriendAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvFriendName" />

    <ImageView
        android:id="@+id/btnFriendChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFriendName"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnFriendKick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/button_friend_kick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>