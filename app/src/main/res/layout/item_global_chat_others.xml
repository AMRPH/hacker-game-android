<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/colorBackChatOthers"
    android:padding="3dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvGlobalChatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hack"
            android:paddingEnd="3dp"
            android:textColor="#67C6BF"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvGlobalChatClan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hack"
            android:paddingEnd="3dp"
            android:textColor="@color/colorÐ¡lanChat"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvGlobalChatTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hack"
            android:textColor="#67C6BF"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvGlobalChatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hack"
        android:paddingEnd="60dp"
        android:textColor="#539F9A"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll" />

</androidx.constraintlayout.widget.ConstraintLayout>