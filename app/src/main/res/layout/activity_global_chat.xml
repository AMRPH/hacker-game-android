<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlChat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0F0F">

    <ImageView
        android:id="@+id/btnGlobalChatClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:src="@drawable/button_no" />


    <ScrollView
        android:id="@+id/svGlobalChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll"
        android:layout_below="@+id/btnGlobalChatClose"
        android:layout_margin="5dp"
        android:foregroundGravity="bottom">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGlobalChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>


    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp">

        <Button
            android:id="@+id/btnGlobalSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/style_background"
            android:text="@string/send"
            android:textColor="#67C6BF" />

        <EditText
            android:id="@+id/edGlobalChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnGlobalSend"
            android:backgroundTint="#67C6BF"
            android:hint="@string/enter_message"
            android:maxLength="256"
            android:textColor="#67C6BF"
            android:textColorHint="#539F9A" />

    </RelativeLayout>


</RelativeLayout>