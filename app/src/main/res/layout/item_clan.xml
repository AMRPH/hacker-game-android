<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clClan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/style_background">

    <ImageView
        android:id="@+id/ivClanAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_avatar_clan" />

    <TextView
        android:id="@+id/tvClanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/hack"
        android:text="Name"
        android:textColor="@color/colorMain"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ivClanAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivClanAvatar" />

    <TextView
        android:id="@+id/tvClanRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/hack"
        android:textColor="@color/colorMain"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivClanAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvClanName" />

    <TextView
        android:id="@+id/tvClanMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/hack"
        android:textColor="@color/colorMain"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivClanAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvClanRating" />

    <ImageView
        android:id="@+id/btnClanInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/button_friend_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>