<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackDark"
    android:padding="10dp">

    <ImageView
        android:id="@+id/btnNewsClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/icon_line"
        app:layout_constraintTop_toBottomOf="@+id/tvNewsTitle" />

    <TextView
        android:id="@+id/tvNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hack"
        android:gravity="center"
        android:textColor="@color/colorMain"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/space5"
        tools:layout_editor_absoluteX="10dp" />

    <ImageView
        android:id="@+id/space5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/icon_line"
        app:layout_constraintTop_toBottomOf="@+id/btnNewsClose" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/space6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space">

        <TextView
            android:id="@+id/tvNewsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMain"
            android:textSize="14sp" />
    </ScrollView>

    <ImageView
        android:id="@+id/space6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/icon_line"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>